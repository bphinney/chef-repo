#.bash_profile

# Get the aliases and functions
if [ -f ~/.bashrc ]; then
        . ~/.bashrc
fi

# Source global definitions
if [ -f /etc/bashrc ]; then
        . /etc/bashrc
fi

# User specific environment and startup programs

PATH=$PATH:$HOME/bin

export PATH

# Javadev-specific aliases for tomcat instances

alias ll='ls -al'
alias clogs='cd /opt/vertx/logs'
alias ctail='cd /opt/vertx/logs; tail -f collabserver.log'
alias tlogs='cd /opt/tomcat/logs'
alias ttail='cd /opt/tomcat/logs; tail -f activfoundation.log'
