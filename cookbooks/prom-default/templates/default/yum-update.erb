#!/bin/sh
glusterrepo=''
erlangrepo=''
[[ -f /etc/yum.repos.d/glusterfs-epel.repo ]] && { glusterrepo='--disablerepo=glusterfs-epel '; }
[[ -f /etc/yum.repos.d/erlang_solutions.repo ]] && { erlangrepo='--disablerepo=erlang_solutions '; }
yum update --disablerepo=promethean* ${glusterrepo}${erlangrepo}$@
