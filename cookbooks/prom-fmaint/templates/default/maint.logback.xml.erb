<included>
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.base}/logs/foundation-maint.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${log.base}/logs/foundation-maint-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- Keep 5 days worth of logs -->
            <maxHistory>5</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 10MB -->
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg \(%file:%line\) %n</pattern>
        </encoder>
    </appender>


  <% node['foundationlog']['logger_maintloglevel'].each do |logger| -%>
    <logger name="<%= logger.split('-').last %>" level="<%= logger.split('-').first.upcase %>"/>
  <% end -%>

    <root level="<%= node['foundationlog']['defaultloglevel'] %>">
        <appender-ref ref="ROLLING" />
    </root>
</included>
