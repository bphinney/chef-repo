<included>
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/foundation-async.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${catalina.base}/logs/foundation-async-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!-- Keep 5 days worth of logs -->
            <maxHistory>5</maxHistory>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <!-- or whenever the file size reaches 10MB -->
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg \(%file:%line\) %n</pattern>
        </encoder>
    </appender>

    <logger name="org.hibernate" level="INFO"/>
<% if node['af']['intercom_enabled'] == "true" -%>
    <logger name="intercom-java" level="ERROR"/>
<% end -%>

  <% node['foundationlog']['logger_asyncloglevel'].each do |logger| -%>
    <logger name="<%= logger.split('-').last %>" level="<%= logger.split('-').first.upcase %>"/>
  <% end -%>

    <root level="<%= node['foundationlog']['defaultloglevel'] %>">
        <appender-ref ref="ROLLING"/>
    </root>
</included>
