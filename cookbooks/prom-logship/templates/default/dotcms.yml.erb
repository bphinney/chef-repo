# Config file for dotcms logs
filebeat:
  prospectors:
    -
      paths:
        - /opt/dotCMS/dotserver/tomcat-7.0.54/logs/*.log
      encoding: utf-8
      input_type: log
      fields_under_root: true
      fields:
        environment: "<%= node['chef_environment'] %>"
        application: "dotcms"
      tail_files: true
